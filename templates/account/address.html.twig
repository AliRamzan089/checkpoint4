{% extends 'base.html.twig' %}

{% block title %}Espace Personnel{% endblock %}

{% block content %}
<a href="{{path('account_address_add')}}" class="btn btn-info btn-sm float-right">Ajouter une adresse</a>
<h1>Mes adresses</h1>
<h2>{{app.user.firstname}}, vous pouvez gerez vos adresses ici. </h2>

<a href="{{path('account')}}">Retour</a>
<hr>

{% if app.user.addresses |length == 0 %}
<p class="text-center">
    Aucune adresse n'est enregistrÃ©e sur votre espace. Pour en ajouter une veuillez <a
        href="{{path('account_address_add')}}">cliquez ici</a>
</p>
{% else %}
<div class="row">
    {% for address in app.user.addresses %}
    <div class="col-md-4">
        <div class="card mr-5" style="width: 18rem;">
            <div class="card-body ">
                <h5 class="card-title">{{address.name}}</h5>
                <p class="card-text">
                    {{address.address}}</br>
                    {{address.postal}} - {{address.city}} - {{address.country}}</br>
                    {{address.phone}}
                </p>
                <a href="{{ path('account_address_edit',{'id': address.id})}}"><i class="fas fa-pen-square modelo-edit-adrs"></i></a> | <a href="{{ path('account_address_delete', {'id' : address.id}) }}">Supprimer</a>
            </div>
        </div>
    </div>
    {% endfor %}
</div>
{% endif %}
{% endblock %}