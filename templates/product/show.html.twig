{% extends 'base.html.twig' %}

{% block title %}{{product.name}}{% endblock %}

{% block content %}
<div class="row product-container">
    <div class="col-md-4">
        <img class="product-img" src="{{product.firstPicture}}" alt="" srcset="">
    </div>
    <div class="col-md-8">
        <h5>{{product.name}}</h5>
        <span class="product-single-price">{{ (product.price / 100)|number_format(2,',','.')}} â‚¬</span>
        <hr>
        <p>
            {{product.description}}
        </p>
        <hr>
        <a href="{{path('add_to_cart', {'id' : product.id})}}" class="btn btn-primary">Ajouter au panier</a>
    </div>
</div>
{% endblock %}